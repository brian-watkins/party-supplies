{
  "name": "spheres",
  "version": "1.0.0",
  "description": "Tools to create web-based applications",
  "author": "Brian Watkins",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-watkins/spheres"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces",
    "test:examples": "npm run clean && npm run build && npm run test -w examples",
    "test:store": "npm run test -w @spheres/store",
    "test:view": "npm run test -w @spheres/view",
    "test:view:debug": "DEBUG=true npm run test:view"
  },
  "workspaces": [
    "packages/store",
    "packages/view",
    "examples"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.1"
  },
  "volta": {
    "node": "20.10.0"
  }
}
